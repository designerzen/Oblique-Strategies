include ../mixins/head
include ../mixins/footer
include ../mixins/menu

//- Begin ===============================================================================
include doctype

	head
		meta(charset='utf-8')
		//if !HTML5
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		title O B L I Q U E . S T R A T E G I E S . v . I
		
