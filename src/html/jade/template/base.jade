						block cards
						//- Reload the entire Deck!
						li.reload 
							a Shuffle Deck
	
				footer
					block footer
			
		//- Main Footer ===============================================================================
		+footer()
		
		
	//- Javascripts ===============================================================================
	script(src='js/load.js')
