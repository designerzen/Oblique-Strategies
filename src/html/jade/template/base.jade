		meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
		meta(name='description', content='audio tools, accessible technology')
		meta(name='author', content='designerzen')
		
		link(rel='stylesheet', href='css/styles.css')
		script(src='js/vendor/modernizr/modernizr-2.6.2-respond-1.1.0.min.js')
		
	body.loading
		
		header
			h1 Oblique Strategies
			h2 Inspiration at everytime
			nav#main-menu
				ul
					+navigation()

		//- Content ==================================================================================
		#content
			article
				section
					header
						block header
					
