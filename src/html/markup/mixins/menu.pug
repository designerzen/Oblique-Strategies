mixin navigation( decks,active )
	ul
		each deck, index in decks
			li.deck(class=active === index +1? 'active' : ''): a(href=deck.link, alt=deck.description) #{deck.name}
			//-
				ul
					li(class=active === 1 ? 'active' : ''): a(href='1.html', alt='Version 1 - 1975') I
					li(class=active === 2 ? 'active' : ''): a(href='2.html', alt='Version 2 - 1978') II
					li(class=active === 3 ? 'active' : ''): a(href='3.html', alt='Version 3 - 1979') III
					li(class=active === 4 ? 'active' : ''): a(href='4.html', alt='Version 4 - 1986') IV
					li(class=active === 11 ? 'active' : ''): a(href='11.html', alt='Version 11 - 1986') DJ
