include ../mixins/menu

//- Begin ===============================================================================
html

	head
		meta(charset='utf-8')
		title OBLIQUE . STRATEGIES

		//- Prevent scaling  and pinch zoomming on touch enabled devices
		meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
		meta(name='description', content='Oblique Strategies - Inspirational help')
		meta(name='author', content='brian eno, harold schmidt, designerzen')
		meta(name="msapplication-tap-highlight", content="no")
		link(rel='stylesheet', href='css/styles.css')
		script(src='js/vendor/modernizr/modernizr-2.6.2-respond-1.1.0.min.js')

	body.loading

		header
			h1 Oblique Strategies
			h2 Simplified Inspiration

			nav#main-menu
				block menu
					+navigation()

		//- Content ==================================================================================
		main#content
			article
				section
					header
						block header

					ul#deck.cards
						block cards
						//- Reload the entire Deck!
						li.reload
							a#shuffle Shuffle Deck

					footer
						block footer

		//- Main Footer ===============================================================================
		include ../partials/footer
			include ../partials/social

		//- Javascripts ===============================================================================
		script(src='js/main.js',defer,async)
		//if (gte IE 6)&(lte IE 10)
			script(src='js/vendor/selectivizr/selectivizr-min.js')
